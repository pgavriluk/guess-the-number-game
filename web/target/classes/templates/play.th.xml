<thlogic>
    <attr sel="#headerId" th:replace="~{fragments/header :: header}"/>
    <attr sel="#game-title" th:text="#{game.title}"/>
    <attr sel="#main-message" th:text="${__${T(pavel.demo.util.AttributeNames).MAIN_MESSAGE}__}"/>
    <attr sel="#result-message" th:text="${__${T(pavel.demo.util.AttributeNames).RESULT_MESSAGE}__}"/>
    <attr sel="#game-form" th:action="@{__${T(pavel.demo.util.GameMappings).PLAY}__}" action="play2" method="post"/>
    <attr sel="#enter-guess" th:text="#{game.enter.guess}"/>
    <attr sel="submit" th:value="#{game.submit}"/>
    <attr sel="#footerId" th:replace="~{fragments/footer :: footer}"/>
</thlogic>